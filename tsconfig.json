{
  "compilerOptions": {
    "target": "ES6",                     // La versión de JavaScript que deseas generar
    "module": "CommonJS",                // Sistema de módulos que usarás
    "outDir": "./dist",                  // Directorio de salida para archivos compilados
    "rootDir": "./src",                  // Directorio raíz de tu código fuente
    "strict": true,                       // Activa todas las opciones de verificación estricta
    "esModuleInterop": true,              // Permite la interoperabilidad entre módulos
    "skipLibCheck": true                  // Omite la verificación de tipos de archivos de declaración
  },
  "include": ["src/**/*"],                // Archivos que deseas incluir
  "exclude": ["node_modules"]             // Archivos que deseas excluir
}